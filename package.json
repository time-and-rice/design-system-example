{
  "name": "design-system-example",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -rF './packages/*' run build",
    "changeset": "changeset",
    "check": "pnpm -rF './packages/*' run check",
    "check:write": "pnpm -rF './packages/*' run check:write",
    "components": "pnpm -F @time-and-rice/design-system-example",
    "pkg:sort": "sort-package-json ./package.json ./packages/*/package.json",
    "publish": "changeset publish",
    "typecheck": "pnpm -rF './packages/*' run typecheck",
    "version": "changeset version"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.18.11",
    "sort-package-json": "^3.4.0",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.3"
}
