{
  "name": "design-system-example",
  "private": true,
  "type": "module",
  "scripts": {
    "cmp:build": "pnpm -F @time-and-rice/design-system-example build",
    "cmp:check": "pnpm -F @time-and-rice/design-system-example exec biome check",
    "cmp:check:write": "pnpm -F @time-and-rice/design-system-example exec biome check --write",
    "cmp:sb": "pnpm -F @time-and-rice/design-system-example storybook",
    "cmp:sb:build": "pnpm -F @time-and-rice/design-system-example storybook:build",
    "plg:build": "pnpm -F @time-and-rice/design-system-example-plugin build",
    "plg:check": "pnpm -F @time-and-rice/design-system-example-plugin exec biome check",
    "plg:check:write": "pnpm -F @time-and-rice/design-system-example-plugin exec biome check --write",
    "w:build": "pnpm -rF './packages/*' run build",
    "w:changeset": "changeset",
    "w:check": "pnpm -rF './packages/*' exec biome check",
    "w:check:write": "pnpm -rF './packages/*' exec biome check --write",
    "w:pkg:sort": "sort-package-json ./package.json ./packages/*/package.json",
    "w:release": "changeset publish",
    "w:version": "changeset version"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.18.11",
    "sort-package-json": "^3.4.0",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.18.3"
}
